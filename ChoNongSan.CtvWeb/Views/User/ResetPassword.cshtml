@model ChoNongSan.ViewModels.Requests.TaiKhoan.KhachHang.ResetPassRequest

@{
    Layout = null;
    string emai = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Khôi phục mật khẩu - CTV</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/assets/images/logo/favicon.png">

    <!-- page css -->
    <!-- Core css -->
    <link href="~/assets/css/app.min.css" rel="stylesheet">
</head>

<body>
    <div class="app">
        <div class="container-fluid p-h-0 p-v-20 bg full-height d-flex" style="background-image: url('/assets/images/others/login-3.png')">
            <div class="d-flex flex-column justify-content-between w-100">
                <div class="container d-flex h-100">
                    <div class="row align-items-center w-100">
                        <div class="col-md-7 col-lg-5 m-h-auto">
                            <div class="card shadow-lg">
                                <div class="card-body">
                                    @if (@TempData["ALertMessage"] != null)
                                    {
                                        <div class="alert alert-success" style="text-align:center">
                                            <h3>@TempData["ALertMessage"]</h3>
                                        </div>
                                    }
                                    <div class="d-flex align-items-center justify-content-between m-b-30">
                                        @*<img class="img-fluid" alt="" src="~/assets/images/logo/logo1.png">*@
                                        <h2 class="m-b-0">Đổi mật khẩu</h2>
                                    </div>
                                    <form asp-controller="User" asp-action="ResetPassword" method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            @*<label class="font-weight-semibold control-label" asp-for="Email"></label>*@
                                            <div class="input-affix m-b-10">
                                                <h3>
                                                    <i style="margin-left:10px; margin-right:10px" class=" anticon anticon-mail"></i>
                                                    @(emai = Model.Email)
                                                </h3>

                                                <input hidden="hidden" type="text" value="@emai" class="form-control" asp-for="Email" placeholder="Mật khẩu mới">
                                            </div>
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label class="font-weight-semibold control-label" asp-for="NewPass"></label>
                                            <div class="input-affix m-b-10">
                                                <i class="prefix-icon anticon anticon-lock"></i>
                                                <input type="password" class="form-control" asp-for="NewPass" placeholder="Mật khẩu mới">
                                            </div>
                                            <span asp-validation-for="NewPass" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label class="font-weight-semibold control-label" asp-for="ConfirmNewPass"></label>
                                            <div class="input-affix m-b-10">
                                                <i class="prefix-icon anticon anticon-lock"></i>
                                                <input type="password" class="form-control" asp-for="ConfirmNewPass" placeholder="Xác nhận mật khẩu mới">
                                            </div>
                                            <span asp-validation-for="ConfirmNewPass" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <button class="btn btn-primary" type="submit">Cập nhật</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-none d-md-flex p-h-40 justify-content-between">
                    <span class="">© 2021 Phát triển bởi VVT</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Core Vendors JS -->
    <script src="~/assets/js/vendors.min.js"></script>

    <!-- page js -->
    <!-- Core JS -->
    <script src="~/assets/js/app.min.js"></script>
</body>
</html>