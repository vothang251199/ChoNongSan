@model ChoNongSan.ViewModels.Requests.TaiKhoan.UpdateAccountRequest

@{
    ViewData["Title"] = "Cập nhật tài khoản";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="ml-3 mb-0">Cập nhật tài khoản</h1>
<hr />
<div class="row">
    <div class="col-md-4 ml-5">
        <form asp-action="CapNhatTaiKhoan" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="AccountID" class="control-label"></label>
                <input asp-for="AccountID" class="form-control" value="@ViewBag.Id" />
                <span asp-validation-for="AccountID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span style="color:red">*</span>
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input readonly asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span style="color:red">*</span>
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span style="color:red">*</span>
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group d-flex align-items-center" style="flex-direction:column">
                <img id="image" class="img-fluid rounded img-thumbnail" src="@ViewBag.Avatar" alt="Ảnh đại diện" style="width:200px; height:270px" />
                <div class="mt-3">
                    <span style="color:red">*</span>
                    <label asp-for="ThumbnailImage" style="margin-right:15px" class="control-label"></label>
                    <input type="button" class=" btn btn-dark px-3 py-2" value="Đổi ảnh" onclick="document.getElementById('input_img').click();" />
                </div>

                <input id="input_img" onchange="loadFile(event)" asp-for="ThumbnailImage" class="d-none form-control" />
                <span asp-validation-for="ThumbnailImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cập nhật" class="d-flex mx-auto btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">

        //load ảnh
        var loadFile = function (event) {
            var lent = event.target.files.length;
            if (lent != 0) {
                document.getElementById('image').src = URL.createObjectURL(event.target.files[0]);
            }
        };
    </script>
}