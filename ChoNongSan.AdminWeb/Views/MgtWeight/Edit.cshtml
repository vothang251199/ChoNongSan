@model ChoNongSan.ViewModels.Requests.DonVi.UpdateWeightRequest

@{
    ViewData["Title"] = "Cập nhật đơn vị";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";}

<h1>Cập nhật đơn vị</h1>
<hr />
<div class="row" style=" margin-top:30px">
    <div class="col-md-6" style="margin-left:60px">
        @if (@TempData["ALertMessage"] != null)
        {
            <div class="alert alert-success" style="text-align:center">
                <h3>@TempData["ALertMessage"]</h3>
            </div>
        }
        <form asp-controller="MgtWeight" asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="WeightId" class="control-label"></label>
                <input asp-for="WeightId" class="form-control" />
                <span asp-validation-for="WeightId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeightName" class="control-label"></label>
                <input asp-for="WeightName" class="form-control" />
                <span asp-validation-for="WeightName" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <a asp-action="Index" class="btn btn-default" style="margin-right: 20px">Quay lại</a> <h2>|</h2>
                <input type="submit" value="Lưu" class="btn btn-success" style="margin-left:20px; width:75px" />
            </div>
        </form>
    </div>
</div>