@model ChoNongSan.ViewModels.Responses.WeightVm

@{
    ViewData["Title"] = "Xóa đơn vị";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";}

<h1>Xóa đơn vị</h1>
<hr />
<h3>Bạn có chắc chắn muốn xóa danh mục này không?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WeightId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WeightId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WeightName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WeightName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input asp-for="WeightId" type="hidden" />
        <a asp-action="Index" class="btn btn-default" style="margin-right: 20px; ">Quay lại</a> |
        <input value="Xóa" style="margin-left:20px" type="submit" class="btn btn-danger">
    </form>
</div>