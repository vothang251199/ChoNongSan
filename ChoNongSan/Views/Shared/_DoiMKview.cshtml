@model ChoNongSan.ViewModels.Requests.TaiKhoan.ChangePassRequest
@{
    var fullName = User.Claims.Where(x => x.Type == "FullName")
               .Select(c => c.Value).SingleOrDefault();
    var userName = User.Claims.Where(x => x.Type == "UserName")
               .Select(c => c.Value).SingleOrDefault();
}
<h4>Dổi Mật khẩu</h4>
<hr />
<div class="tab-pane fade show active">
    <div class="myaccount-details">
        <form asp-controller="User" asp-action="DoiMatKhau" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="AccountID" class="control-label"></label>
                <input asp-for="AccountID" class="form-control" />
                <span asp-validation-for="AccountID" class="text-danger"></span>
            </div>
            <div class="single-input mt-4">
                <label asp-for="OldPass" class="control-label"></label>
                <input asp-for="OldPass" class="form-control" placeholder="Nhập mật khẩu cũ" />
                <span asp-validation-for="OldPass" class="text-danger"></span>
            </div>
            <div class="single-input mt-4">
                <label asp-for="NewPass" class="control-label"></label>
                <input asp-for="NewPass" class="form-control" placeholder="Nhập mật khẩu mới" />
                <span asp-validation-for="NewPass" class="text-danger"></span>
            </div>
            <div class="single-input mt-4">
                <label asp-for="ConfirmNewPass" class="control-label"></label>
                <input asp-for="ConfirmNewPass" class="form-control" placeholder="Xác nhận mật khẩu mới" />
                <span asp-validation-for="ConfirmNewPass" class="text-danger"></span>
            </div>
            <div class="single-input mt-4 d-flex align-items-center" style="flex-direction:column">
                <input type="submit" value="Thay đổi" class=" btn btn-success" />
            </div>
        </form>
    </div>
</div>