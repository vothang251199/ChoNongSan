@using ChoNongSan.ViewModels.Common
@using ChoNongSan.ViewModels.Responses

@model PageResult<PostVmTongQuat>

<div class="tab-content product-tab-content">

    <div class="tab-pane fade show active" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
        <div class="product-review-body">
            <h4 class="heading mb-5">Tin đã ẩn</h4>
            <br />
            @if (Model.TotalRecords == 0)
            {
                <div style="display:flex" class="meta">
                    <h3 style="margin:auto">
                        <strong style="color:red">Không có tin nào trong mục này</strong>
                    </h3>
                </div>
            }
            else
            {
                <ul class="user-info-wrap">

                    @foreach (var item in Model.Items)
                    {
                        item.ImageDefault = ViewBag.ApiUrl + item.ImageDefault;
                        <li>
                            <ul class="user-info">
                                <li class="user-avatar">
                                    <img src="@item.ImageDefault" alt="User Image">
                                </li>
                                <li class="user-comment">
                                    <div class="rating-box">
                                        <ul>
                                            <li><i class="pe-7s-star"></i></li>
                                            <li><i class="pe-7s-star"></i></li>
                                            <li><i class="pe-7s-star"></i></li>
                                            <li><i class="pe-7s-star"></i></li>
                                            <li><i class="pe-7s-star"></i></li>
                                        </ul>
                                    </div>
                                    <div class="meta">
                                        <span><strong>@item.Title -</strong> @item.TimePost</span>
                                    </div>
                                    <p class="short-desc mb-0">
                                        @item.Description
                                    </p>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
                <br />
                <br />
                <div style="display: flex;">
                    <div style="margin:auto">
                        @await Component.InvokeAsync("Pager", Model)
                    </div>
                </div>
            }
        </div>
    </div>
</div>