@model ChoNongSan.ViewModels.Requests.TaiKhoan.UpdateAccountRequest

@{
    ViewData["Title"] = "Cập nhật tài khoản";
}

<div class="tab-pane fade show active">
    <div class="myaccount-details">
        <form asp-action="CapNhatTaiKhoan" asp-controller="User" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="myaccount-form-inner mx-auto row">
                <div class="col-12 col-lg-6 d-lg-inline-flex p-0 ">
                    <div class="mt-4 col-lg-6 col-12 d-flex align-items-center" style="flex-direction:column">
                        <img id="avatar" class="img-fluid rounded-circle img-thumbnail" src="@ViewBag.Avatar" alt="Ảnh đại diện" style="width:100px; height:100px" />
                        <label asp-for="ThumbnailImage" class="mt-lg-2 control-label"></label>
                        <span asp-validation-for="ThumbnailImage" class="text-danger"></span>
                    </div>

                    <div class="col-lg-6 col-12 my-auto">
                        <input id="input_img" onchange="loadFile(event)" asp-for="ThumbnailImage" class="form-control" hidden />
                        <button id="btnAddImg" class="mt-3 mx-auto d-flex align-items-center row p-0 col-12 btn btn-link" value="Đổi ảnh" type="button" onclick="document.getElementById('input_img').click();">
                            <img class="col-12 mx-auto p-0" style="height:70px; width:70px" src="~/assetsKH/icon/icon-camera.png" />
                            <p class="col-12 m-0">Đổi ảnh</p>
                        </button>
                    </div>
                </div>

                <div class="col-lg-6 col-12 p-0">
                    <div class=" mt-4" hidden>
                        <label asp-for="AccountID" class="control-label"></label>
                        <input asp-for="AccountID" value="@ViewBag.Id" />
                        <span asp-validation-for="AccountID" class="text-danger"></span>
                    </div>

                    <div class=" mt-4">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="mt-4">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 p-0">
                    <div class="single-input">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Nhập Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="single-input">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="single-input">
                        <button class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0" type="submit">
                            <span>Cập nhật</span>
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">

    //load ảnh
    var loadFile = function (event) {
        var lent = event.target.files.length;
        if (lent != 0) {
            document.getElementById('avatar').src = URL.createObjectURL(event.target.files[0]);
        }
    };
</script>