@using ChoNongSan.ApiUsedForWeb.ViewModels

@model PostTabVm

@{
    ViewData["Title"] = "Quản lý tin đăng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var accountId = User.Claims.Where(x => x.Type == "Id").Select(c => c.Value).SingleOrDefault();
    Model.acountId = Convert.ToInt32(accountId);
}
@*<style>
        .product-tab-style-2 li.nav-item a.active {
            background-color: forestgreen;
        }
    </style>*@

<main class="main-content">
    <div class="shop-area section-space-top-55">
        <div class="container">
            <div class="row">
                <div class="col-12 order-lg-1 order-1">
                    <ul id="tabpost" class="nav product-tab-nav product-tab-style-2" role="tablist">
                        <li class="nav-item " role="presentation">
                            <a asp-route-tabname="HienThi" asp-action="SwitchTabs" class="btn btn-custom-size @(Model.ActiveTab == ChoNongSan.ApiUsedForWeb.ViewModels.Tab.HienThi ? "active" : string.Empty)">
                                Đang hiển thị
                            </a>
                        </li>
                        <li class="nav-item " role="presentation">
                            <a asp-route-tabname="DoiDuyet" asp-action="SwitchTabs" class=" btn btn-custom-size @(Model.ActiveTab == ChoNongSan.ApiUsedForWeb.ViewModels.Tab.DoiDuyet ? "active" : string.Empty)">
                                Đợi duyệt
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a asp-route-tabname="TuChoi" asp-action="SwitchTabs" class=" btn btn-custom-size @(Model.ActiveTab == ChoNongSan.ApiUsedForWeb.ViewModels.Tab.TuChoi ? "active" : string.Empty)">
                                Bị từ chối
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a asp-route-tabname="DaAn" asp-action="SwitchTabs" class=" btn btn-custom-size @(Model.ActiveTab == ChoNongSan.ApiUsedForWeb.ViewModels.Tab.DaAn ? "active" : string.Empty)">
                                Đã ẩn
                            </a>
                        </li>
                    </ul>

                    @switch (Model.ActiveTab)
                    {

                        case ChoNongSan.ApiUsedForWeb.ViewModels.Tab.HienThi:
                            @await Component.InvokeAsync("HienThi", Model);
                            break;
                        case ChoNongSan.ApiUsedForWeb.ViewModels.Tab.DoiDuyet:
                            @await Component.InvokeAsync("DoiDuyet", Model);
                            break;
                        case ChoNongSan.ApiUsedForWeb.ViewModels.Tab.TuChoi:
                            @await Component.InvokeAsync("TuChoi", Model);
                            break;
                        case ChoNongSan.ApiUsedForWeb.ViewModels.Tab.DaAn:
                            @await Component.InvokeAsync("DaAn", Model);
                            break;
                        default:
                            break;
                    }
                </div>
            </div>
        </div>
    </div>
</main>

<main class="main-content">
    <div class="product-tab-area section-space-top-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                </div>
            </div>
        </div>
    </div>
</main>

