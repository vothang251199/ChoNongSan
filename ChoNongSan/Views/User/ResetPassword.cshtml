@model ChoNongSan.ViewModels.Requests.TaiKhoan.KhachHang.ResetPassRequest

@{
	ViewData["Title"] = "Khôi phục mật khẩu";
	Layout = "~/Views/Shared/_LoginRegisterLayout.cshtml";
}

<style>
	button:hover {
		border: none
	}
</style>

<form asp-action="ResetPassword" method="post" style="margin:30px 0 95px 0">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="login-form">
		<h2 class="login-title p-0">Thay đổi mật khẩu</h2>
		<hr />
		<div class="row d-flex">
			<div class="col-lg-12">
				<label asp-for="UserName" class="control-label"></label>
				<input readonly asp-for="UserName" class="rounded form-control" />
			</div>
			<div class="col-lg-12">
				<label asp-for="Email" class="control-label"></label>
				<input readonly asp-for="Email" class="rounded form-control" />
			</div>
			<div class="col-lg-12">
				<label asp-for="NewPass" class="control-label"></label>
				<input asp-for="NewPass" class="rounded form-control" placeholder="Mật khẩu mới" />
				<span asp-validation-for="NewPass" class="text-danger"></span>
			</div>
			<div class="col-lg-12">
				<label asp-for="ConfirmNewPass" class="control-label"></label>
				<input asp-for="ConfirmNewPass" class="rounded form-control" placeholder="Xác nhận mật khẩu mới" />
				<span asp-validation-for="ConfirmNewPass" class="text-danger"></span>
			</div>

			<div class="col-lg-12 mt-7 d-flex">
				<button class="mx-auto btn btn-custom-size lg-size btn btn-success btn-white-hover rounded">Thay đổi</button>
			</div>
		</div>
	</div>
</form>